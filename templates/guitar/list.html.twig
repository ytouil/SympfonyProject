{% extends 'base.html.twig' %}

{% block title %}Guitars{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .example-wrapper { 
            margin: 1em auto; 
            max-width: 800px; 
            width: 95%; 
            font: 18px/1.5 sans-serif; 
        }
        .example-wrapper code { 
            background: #F5F5F5; 
            padding: 2px 6px; 
        }
        .guitar-item {
            cursor: pointer;
            padding: 10px;
            border: 1px solid #ddd;
            margin-top: 10px;
            transition: background-color 0.3s ease;
        }
        .guitar-item:hover {
            background-color: #f7f7f7;
        }
    </style>
{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Guitars</h1>

    {# Looping through guitars and using the correct property names #}
    {% for guitar in guitars %}
        <div class="guitar-item" onclick="window.location.href='{{ path('guitar_show', {'id': guitar.id}) }}'">
            <h2>{{ guitar.modelName }}</h2>
            <p>Description: {{ guitar.description }}</p>
        </div>
    {% endfor %}
</div>
{% endblock %}
